#!/usr/bin/env node

/*
 * Serverless Components – Command Line Interface
 */

const args = require('minimist')(process.argv.slice(2))
const run = require('../src/lib/run')
const watch = require('../src/lib/watch')

// Set config from CLI input
const config = {}
config.stage = args.s || args.stage ? args.s || args.stage : 'dev'
config.instance = args._[1] || null
config.method = args._[0] || null
// Set CLI as "on" in config
config.cli = {}
config.cli.verbose = args.v || args.verbose ? args.v || args.verbose : false
config.cli.watch = args.w || args.watch ? args.w || args.watch : false

// Run
;(async () => {
  if (config.cli && config.cli.watch) {
    return watch(config)
  }
  return run(config)
})()
.catch((e) => console.log(e.stack))
// .then(() => process.exit(0))
